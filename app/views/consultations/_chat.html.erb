<h1>Chat</h1>
<div class="messages" data-consultation-subscription-target="messages">
  <% @consultation.messages.each do | message | %>
    <div class="message-row d-flex <%= message.sender?(current_user) ? 'justify-content-end' : 'justify-content-start' %>" id="message-<%= message.id %>">
      <div class="<%= message.sender?(current_user) ? 'sender-style' : 'receiver-style' %>">
        <small>
        <%= message.user_id %>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    </div>
  <% end %>
</div>

<div>
  <%= simple_form_for [@consultation, @message],
    html: {data: { action: "turbo:submit-end->conultation-subscription#resetForm" }, class: "d-flex"} do |f|
  %>
    <%= f.input :content,
      label: false,
      wrapper_html: {class: "flex-grow-1"}
    %>

    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>

</div>
